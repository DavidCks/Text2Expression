{
  "name": "text2expression",
  "version": "0.0.1",
  "description": "Converts text into expressions that can be used to animate a vrm model",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "keywords": ["IPA", "VRM", "expressions", "text2vrm", "text2animation"],
  "author": "DavidCks",
  "license": "MIT",
  "module": "index.ts",
  "files": [
    "lib",
    "types"
  ],
